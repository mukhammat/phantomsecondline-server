{
  "openapi": "3.0.0",
  "info": {
    "title": "API для работы с номерами и звонками",
    "description": "API для работы с номерами телефонов, звонками и сообщениями через Twilio",
    "version": "1.0.0"
  },
  "paths": {
    "/api/countries": {
      "get": {
        "summary": "Получить список доступных стран",
        "operationId": "getAvailableCountries",
        "responses": {
          "200": {
            "description": "Список доступных стран",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "countries": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/country/{iso}": {
      "get": {
        "summary": "Получить информацию о стране по ISO коду",
        "operationId": "getCountryInfo",
        "parameters": [
          {
            "name": "iso",
            "in": "path",
            "required": true,
            "description": "ISO код страны",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о стране",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "countryData": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/call": {
      "post": {
        "summary": "Совершить звонок на номер",
        "operationId": "callToNumber",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "number": {
                    "type": "string",
                    "description": "Номер телефона для звонка"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Результат звонка",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/connect-call": {
      "post": {
        "summary": "Подключить звонок",
        "operationId": "connectCall",
        "responses": {
          "200": {
            "description": "Подключение звонка",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/sendMessage": {
      "post": {
        "summary": "Отправить SMS сообщение",
        "operationId": "sendSmsToNumber",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "number": {
                    "type": "string",
                    "description": "Номер получателя"
                  },
                  "text": {
                    "type": "string",
                    "description": "Текст сообщения"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Результат отправки SMS",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/sms": {
      "post": {
        "summary": "Получить SMS",
        "operationId": "getSms",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Полученные данные SMS",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/set-webhook": {
      "post": {
        "summary": "Установить вебхуки для SMS и звонков",
        "operationId": "setWebhook",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sid": {
                    "type": "string",
                    "description": "SID учетной записи"
                  },
                  "smsWebhook": {
                    "type": "string",
                    "description": "URL для SMS webhook"
                  },
                  "callWebhook": {
                    "type": "string",
                    "description": "URL для звонков webhook"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Установлены вебхуки"
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/create-number": {
      "post": {
        "summary": "Создать новый номер",
        "operationId": "createNumber",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "number": {
                    "type": "string",
                    "description": "Номер телефона для создания"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Номер успешно создан"
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/calls": {
      "get": {
        "summary": "Получить список звонков для номера",
        "operationId": "getCalls",
        "parameters": [
          {
            "name": "number",
            "in": "path",
            "required": true,
            "description": "Номер телефона для получения звонков",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список звонков",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}